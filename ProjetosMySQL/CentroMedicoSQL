CREATE DATABASE IF NOT EXIST 'CentroMedicoSQL';
USE 'CentroMedicoSQL';

-- Patient table
CREATE TABLE Paciente (
    cpf INT,
    name VARCHAR(65),
    date_of_birth DATE,
    phone_number VARCHAR(15),
    email VARCHAR(65),
    address VARCHAR(30),
    PRIMARY KEY (cpf)
);

-- Doctor table
CREATE TABLE Doutor (
    crm INT,
    name VARCHAR(255),
    specialization VARCHAR(70),
    date_of_birth DATE,
    phone_number VARCHAR(15),
    email VARCHAR(35),
    address VARCHAR(25),
    PRIMARY KEY (crm)
);

-- Employee table
CREATE TABLE Funcionario (
    id INT AUTO_INCREMENT,
    name VARCHAR(255),
    job_title VARCHAR(25),
    date_of_birth DATE,
    phone_number VARCHAR(15),
    email VARCHAR(35),
    address VARCHAR(65),
    PRIMARY KEY (id)
);

-- Vaccination table
CREATE TABLE Vacinacao (
    id INT AUTO_INCREMENT,
    patient_id INT,
    doctor_id INT,
    vaccine_name VARCHAR(45),
    date_of_vaccination DATE,
    PRIMARY KEY (id),
    FOREIGN KEY (patient_id) REFERENCES Patient(id),
    FOREIGN KEY (doctor_id) REFERENCES Doctor(id)
);

-- Procedure table
CREATE TABLE Procedimento (
    id INT AUTO_INCREMENT,
    patient_id INT,
    doctor_id INT,
    service_name VARCHAR(35),
    date_of_procedure DATE,
    PRIMARY KEY (id),
    FOREIGN KEY (patient_id) REFERENCES Patient(id),
    FOREIGN KEY (doctor_id) REFERENCES Doctor(id)
);
